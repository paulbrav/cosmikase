{{- /* Read theme configuration from cursor.json */ -}}
{{- $cursorJson := joinPath .themes_dir .theme "cursor.json" | include | fromJson -}}
{{- $isLight := false -}}
{{- if hasKey $cursorJson "light" -}}
{{-   $isLight = $cursorJson.light -}}
{{- end -}}
{
    "window.commandCenter": true,
    "workbench.colorTheme": "{{ $cursorJson.colorTheme }}",
{{- if $isLight }}
    "workbench.preferredDarkColorTheme": "Cursor Dark Midnight",
    "workbench.preferredLightColorTheme": "{{ $cursorJson.colorTheme }}"
{{- else }}
    "workbench.preferredDarkColorTheme": "{{ $cursorJson.colorTheme }}",
    "workbench.preferredLightColorTheme": "Cursor Light"
{{- end }}
}
